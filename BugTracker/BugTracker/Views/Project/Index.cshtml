@using BugTracker.Models
@model IEnumerable<BugTracker.Models.Project>

@{
    ViewBag.Title = "Проекты";
}

<h2>Проекты</h2>


<p>
    @Html.ActionLink("Создать новый проект", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Название")
        </th>
        <th>
            @Html.DisplayName("Заказчик")
        </th>
        <th>
            @Html.DisplayName("Менеджер")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manager.UserName)
        </td>
        <td>
            @Html.ActionLink("Подробно", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
